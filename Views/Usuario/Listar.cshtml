@model List<Usuario>

@{
    ViewData["title"] = "listagem de Usuários";
}

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Login</td>
            <td>Senha</td>
            <td>DataNascimento</td>
            <td>Operações</td>
        </tr>
    </thead>

    @foreach (Usuario u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Nome</td>
            <td>@u.Login</td>
            <td>@u.Senha</td>
            <td>@u.DataNascimento.ToShortDateString()</td>
            <td>
                <a href="/Usuario/Editar?Id=@u.Id">Alterar</a>
                <a href="/Usuario/Remover?Id=@u.Id" onclick="return confirm('confirma excluir este registro')">Excluir</a>
            </td>
        </tr>
    }
</table>
